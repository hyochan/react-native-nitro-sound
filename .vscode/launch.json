{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run iOS",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/example",
      "runtimeExecutable": "npx",
      "runtimeArgs": ["react-native", "run-ios"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Run iOS (with yarn)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/example",
      "runtimeExecutable": "yarn",
      "runtimeArgs": ["ios"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "RCT_NO_LAUNCH_PACKAGER": "true"
      }
    },
    {
      "name": "Run Android",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/example",
      "runtimeExecutable": "yarn",
      "runtimeArgs": ["android"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Start Metro",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/example",
      "runtimeExecutable": "yarn",
      "runtimeArgs": ["start", "--reset-cache"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Install Pods (Direct)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/example/ios",
      "runtimeExecutable": "pod",
      "runtimeArgs": ["install"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Install Pods (Bundle)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/example/ios",
      "runtimeExecutable": "bundle",
      "runtimeArgs": ["exec", "pod", "install"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Clean & Rebuild iOS",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/example",
      "runtimeExecutable": "yarn",
      "runtimeArgs": ["ios:pod"],
      "console": "integratedTerminal",
      "preLaunchTask": "clean-ios",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Clean & Rebuild Android",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/example/android",
      "runtimeExecutable": "./gradlew",
      "runtimeArgs": ["clean", "assembleDebug"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}